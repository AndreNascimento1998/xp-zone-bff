{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "src",
  "testRegex": ".*\\.spec\\.ts$",
  "coveragePathIgnorePatterns": [
    "\\.module\\.ts$",
    "\\.service\\.ts$",
    "\\.dto\\.ts$",
    "\\.filter\\.ts$",
    "\\.enum\\.ts$",
    "main.ts"
  ],
  "testPathIgnorePatterns": [
    "\\.module\\.ts$",
    "\\.service\\.ts$",
    "\\.dto\\.ts$",
    "\\.filter\\.ts$",
    "\\.enum\\.ts$",
    "main.ts"
  ],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s"
  ],
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/../src/$1"
  },
  "coverageDirectory": "../coverage",
  "testEnvironment": "node"
}